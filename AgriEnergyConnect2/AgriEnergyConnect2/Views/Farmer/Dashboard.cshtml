@{
    ViewData["Title"] = "Farmer Dashboard";
}

<div class="container mt-5">
    <div class="jumbotron bg-light shadow-sm p-4 rounded">
        <h2 class="display-4 text-primary mb-3">Welcome to Your Farmer Dashboard!</h2>
        <p class="lead">Here you can manage your products and connect with the AgriEnergy community.</p>
        <hr class="my-4">
        <p>Get started by managing your product listings:</p>
        <div class="mt-3">
            <a asp-controller="Farmer" asp-action="AddProduct" class="btn btn-success btn-lg mr-2"><i class="bi bi-plus-square mr-2"></i> Add New Product</a>
            <a asp-controller="Farmer" asp-action="ViewProducts" class="btn btn-info btn-lg"><i class="bi bi-list-check mr-2"></i> View & Manage My Products</a>
        </div>
        <hr class="my-4">
        <p class="text-muted small">Explore other features in the navigation menu.</p>
    </div>
</div>

@section Styles {
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.min.css">
}