@using Microsoft.AspNetCore.Identity
@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - AgriEnergyConnect</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/AgriEnergyConnectPlatform.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.min.css">
    @await RenderSectionAsync("Styles", required: false)
    <---- ADD THIS LINE HERE
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">
                    <i class="bi bi-tree-fill text-success mr-1"></i> AgriEnergyConnect
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarCollapse"
                        aria-controls="navbarCollapse" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarCollapse">
                    <ul class="navbar-nav me-auto mb-2 mb-sm-0">
                        @if (SignInManager.IsSignedIn(User))
                        {
                            @if (User.IsInRole("Farmer"))
                            {
                                <li class="nav-item">
                                    <a class="nav-link" asp-controller="Farmer" asp-action="Dashboard"><i class="bi bi-house-fill mr-2"></i> Dashboard</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" asp-controller="Farmer" asp-action="AddProduct"><i class="bi bi-plus-square-fill mr-2"></i> Add Product</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" asp-controller="Farmer" asp-action="ViewProducts"><i class="bi bi-list-check mr-2"></i> My Products</a>
                                </li>
                            }
                            @if (User.IsInRole("Employee"))
                            {
                                <li class="nav-item">
                                    <a class="nav-link" asp-controller="Employee" asp-action="Dashboard"><i class="bi bi-speedometer2 mr-2"></i> Employee Dashboard</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" asp-controller="Employee" asp-action="AddFarmer"><i class="bi bi-person-plus-fill mr-2"></i> Add Farmer</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" asp-controller="Employee" asp-action="ViewFarmers"><i class="bi bi-people-fill mr-2"></i> View Farmers</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" asp-controller="Employee" asp-action="FilterProducts"><i class="bi bi-funnel-fill mr-2"></i> Filter Products</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" asp-controller="Employee" asp-action="ViewFilteredProducts"><i class="bi bi-search-heart-fill mr-2"></i> Filtered Products</a>
                                </li>
                            }
                        }
                    </ul>

                    <ul class="navbar-nav">
                        @if (SignInManager.IsSignedIn(User))
                        {
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Manage" title="Manage">
                                    <i class="bi bi-person-circle mr-2"></i> Hello @User.Identity?.Name!
                                </a>
                            </li>
                            <li class="nav-item">
                                <form asp-area="Identity" asp-page="/Account/Logout" method="post" class="form-inline">
                                    <button type="submit" class="nav-link btn btn-link text-dark">
                                        <i class="bi bi-box-arrow-right mr-2"></i> Logout
                                    </button>
                                </form>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Login"><i class="bi bi-box-arrow-in-right mr-2"></i> Login</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Register"><i class="bi bi-person-plus-fill mr-2"></i> Register</a>
                            </li>
                        }
                    </ul>

                </div>
            </div>
        </nav>
    </header>

    <main role="main" class="container pb-3">
        @RenderBody()
    </main>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; @DateTime.Now.Year - AgriEnergyConnect
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>