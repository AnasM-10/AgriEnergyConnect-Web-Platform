@{
    ViewData["Title"] = "Farmer Dashboard";
}

<style>
    .dashboard-card {
        background-color: #fff;
        box-shadow: 0 0.25rem 0.75rem rgba(0, 0, 0, 0.08);
        border-radius: 0.8rem;
        padding: 3rem;
        margin-bottom: 2rem;
        border: none;
    }

    body {
        
        background-color: #80EF80; 
    }

    .feature-item {
        background-color: #f8f9fa;
        border-radius: 0.5rem;
        padding: 1.5rem;
        margin-bottom: 1rem;
        border: 1px solid #e9ecef;
    }

    .display-5 {
        font-weight: 600;
    }

    .lead {
        color: #555;
    }

    hr.my-4 {
        border-top: 1px solid rgba(0, 0, 0, 0.1);
    }
</style>

<div class="container mt-5">
    <div class="dashboard-card">
        <h2 class="display-5 text-primary mb-4 text-center">
            <i class="bi bi-house-fill me-3"></i> @ViewData["Title"]
        </h2>
        <p class="lead text-center mb-5">
            Welcome to your centralized hub for managing farm operations, connecting with the AgriEnergy community, and tracking your sustainable contributions.
        </p>

        <hr class="my-5">

        <h3 class="mb-4 text-secondary"><i class="bi bi-box-seam me-2"></i> Product Management</h3>
        <p class="text-muted">Effortlessly add new products and manage your existing inventory.</p>
        <div class="d-grid gap-3 d-md-flex justify-content-md-center mb-5">
            <a asp-controller="Farmer" asp-action="AddProduct" class="btn btn-success btn-lg px-4 me-md-2 shadow-sm">
                <i class="bi bi-plus-circle-fill me-2"></i> Add New Product
            </a>
            <a asp-controller="Farmer" asp-action="ViewProducts" class="btn btn-outline-primary btn-lg px-4 shadow-sm">
                <i class="bi bi-boxes me-2"></i> View & Manage My Products
            </a>
        </div>

        <hr class="my-5">

        <p class="text-center text-muted small mt-4">
            Need help? Check our <a href="#" class="text-primary">FAQ</a> or contact <a href="#" class="text-primary">support</a>.
        </p>
    </div>
</div>

@section Scripts {
}

@section Styles {
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.min.css">
}