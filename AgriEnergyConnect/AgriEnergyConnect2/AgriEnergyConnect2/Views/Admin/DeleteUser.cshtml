@model Microsoft.AspNetCore.Identity.IdentityUser
@{
    ViewData["Title"] = "Delete User";
}

<div class="container mt-5">
    <h1 class="text-center text-danger mb-4">@ViewData["Title"]</h1>
    <hr class="my-4" />

    <h3 class="text-center text-warning">Are you sure you want to delete this user?</h3>
    <div class="row justify-content-center">
        <div class="col-md-6">
            <dl class="row">
                <dt class="col-sm-4">
                    Email:
                </dt>
                <dd class="col-sm-8">
                    @Html.DisplayFor(model => model.Email)
                </dd>
                <dt class="col-sm-4">
                    Username:
                </dt>
                <dd class="col-sm-8">
                    @Html.DisplayFor(model => model.UserName)
                </dd>
            </dl>

            <form asp-action="DeleteUser" method="post">
                @Html.AntiForgeryToken() 
                <input type="hidden" asp-for="Id" />
                <div class="form-group mt-4 text-center">
                    <button type="submit" class="btn btn-danger">Confirm Delete</button>
                    <a asp-action="ManageUsers" class="btn btn-secondary">Cancel</a>
                </div>
            </form>
        </div>
    </div>
</div>