@page
@model LogoutModel
@{
    ViewData["Title"] = "Log out";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-6">
            <div class="card shadow-sm border-0">
                <div class="card-body p-4 p-md-5">

                    <h1 class="card-title text-center mb-4">
                        @ViewData["Title"]
                    </h1>

                    @{
                        if (User.Identity?.IsAuthenticated ?? false)
                        {
                            <div class="alert alert-warning text-center" role="alert">
                                <i class="bi bi-exclamation-triangle-fill me-2"></i> You are currently logged in. Click the button below to log out.
                            </div>
                            <form asp-area="Identity" asp-page="/Account/Logout" method="post" id="logoutForm" class="d-grid gap-2" asp-route-returnUrl="@Url.Content("~/")">
                                <button type="submit" class="btn btn-primary btn-lg">
                                    <i class="bi bi-box-arrow-right me-2"></i> Confirm Logout
                                </button>
                            </form>
                        }
                        else
                        {
                            <div class="alert alert-success text-center" role="alert">
                                <i class="bi bi-check-circle-fill me-2"></i> You have successfully logged out of the application.
                            </div>
                            <p class="text-center mt-3">
                                You will be redirected to the <a href="~/" class="alert-link">home page</a> shortly.
                                <br>
                                If not, <a href="~/" class="alert-link">click here to go home</a>.
                            </p>
                            <meta http-equiv="refresh" content="3;url=/" />
                        }
                    }
                </div>
            </div>
        </div>
    </div>
</div>