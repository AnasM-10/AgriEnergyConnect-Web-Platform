@page
@model RegisterModel

@{
    ViewData["Title"] = "Register";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-lg border-0 rounded-lg mt-5">
                <div class="card-header bg-success text-white text-center py-4">
                    <h3 class="font-weight-light my-2">Register for AgriEnergyConnect</h3>
                </div>
                <div class="card-body p-4">
                    <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post">
                       
                        <div asp-validation-summary="All" class="text-danger mb-3" role="alert"></div>

                        @if (!string.IsNullOrEmpty(TempData["StatusMessage"] as string))
                        {
                            var messageClass = TempData["StatusMessage"].ToString().Contains("Error") ? "alert-danger" : "alert-success";
                            <div class="alert @messageClass alert-dismissible fade show mb-3" role="alert">
                                @TempData["StatusMessage"]
                                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                            </div>
                        }

                        <div class="form-floating mb-3">
                            <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" placeholder="name@example.com" />
                            <label asp-for="Input.Email" class="form-label">Email address</label>
                            <span asp-validation-for="Input.Email" class="text-danger small mt-1 d-block"></span>
                        </div>

                        <div class="form-floating mb-3">
                            <input asp-for="Input.Password" class="form-control" autocomplete="new-password" aria-required="true" placeholder="Password" type="password" />
                            <label asp-for="Input.Password" class="form-label">Password</label>
                            <span asp-validation-for="Input.Password" class="text-danger small mt-1 d-block"></span>
                            <div class="form-text mt-2 text-muted">
                                <ul class="list-unstyled small mb-0">
                                    <li><i class="bi bi-check-circle-fill me-1 text-success"></i>Minimum 6 characters</li>
                                    <li><i class="bi bi-check-circle-fill me-1 text-success"></i>At least one uppercase letter</li>
                                    <li><i class="bi bi-check-circle-fill me-1 text-success"></i>At least one lowercase letter</li>
                                    <li><i class="bi bi-check-circle-fill me-1 text-success"></i>At least one digit</li>
                                    <li><i class="bi bi-check-circle-fill me-1 text-success"></i>At least one special character</li>
                                </ul>
                            </div>
                        </div>

                        <div class="form-floating mb-3">
                            <input asp-for="Input.ConfirmPassword" class="form-control" autocomplete="new-password" aria-required="true" placeholder="Confirm Password" type="password" />
                            <label asp-for="Input.ConfirmPassword" class="form-label">Confirm Password</label>
                            <span asp-validation-for="Input.ConfirmPassword" class="text-danger small mt-1 d-block"></span>
                        </div>

                        @* Role Selection Dropdown *@
                        <div class="form-floating mb-3">
                            <select asp-for="Input.Role" asp-items="Model.RoleList" class="form-select" id="roleSelect" aria-required="true">
                                <option value="">-- Select Role --</option> 
                            </select>
                            <label asp-for="Input.Role" class="form-label">Register As</label>
                            <span asp-validation-for="Input.Role" class="text-danger small mt-1 d-block"></span>
                        </div>

                        @* Conditional Farmer Fields *@
                        <div id="farmerFields" style="display: none;">
                            <hr class="my-4">
                            <h5 class="mb-3">Farmer Details</h5>
                            <div class="form-floating mb-3">
                                <input asp-for="Input.FarmerFirstName" class="form-control" placeholder="First Name" />
                                <label asp-for="Input.FarmerFirstName" class="form-label"></label>
                                <span asp-validation-for="Input.FarmerFirstName" class="text-danger small mt-1 d-block"></span>
                            </div>
                            <div class="form-floating mb-3">
                                <input asp-for="Input.FarmerLastName" class="form-control" placeholder="Last Name" />
                                <label asp-for="Input.FarmerLastName" class="form-label"></label>
                                <span asp-validation-for="Input.FarmerLastName" class="text-danger small mt-1 d-block"></span>
                            </div>
                            <div class="form-floating mb-3">
                                <input asp-for="Input.FarmerContactNumber" class="form-control" placeholder="Contact Number" />
                                <label asp-for="Input.FarmerContactNumber" class="form-label"></label>
                                <span asp-validation-for="Input.FarmerContactNumber" class="text-danger small mt-1 d-block"></span>
                            </div>
                            <div class="form-floating mb-3">
                                <input asp-for="Input.FarmerAddress" class="form-control" placeholder="Address" />
                                <label asp-for="Input.FarmerAddress" class="form-label"></label>
                                <span asp-validation-for="Input.FarmerAddress" class="text-danger small mt-1 d-block"></span>
                            </div>
                        </div>

                  
                        <div id="employeeFields" style="display: none;">
                            <hr class="my-4">
                            <h5 class="mb-3">Employee Details (Optional)</h5>
                            <div class="form-floating mb-3">
                                <input asp-for="Input.EmployeeFirstName" class="form-control" placeholder="First Name" />
                                <label asp-for="Input.EmployeeFirstName" class="form-label"></label>
                                <span asp-validation-for="Input.EmployeeFirstName" class="text-danger small mt-1 d-block"></span>
                            </div>
                            <div class="form-floating mb-3">
                                <input asp-for="Input.EmployeeLastName" class="form-control" placeholder="Last Name" />
                                <label asp-for="Input.EmployeeLastName" class="form-label"></label>
                                <span asp-validation-for="Input.EmployeeLastName" class="text-danger small mt-1 d-block"></span>
                            </div>
                            <div class="form-floating mb-3">
                                <input asp-for="Input.EmployeeContactNumber" class="form-control" placeholder="Contact Number" />
                                <label asp-for="Input.EmployeeContactNumber" class="form-label"></label>
                                <span asp-validation-for="Input.EmployeeContactNumber" class="text-danger small mt-1 d-block"></span>
                            </div>
                        </div>

                        <button id="registerSubmit" type="submit" class="btn btn-success btn-lg w-100">
                            <i class="bi bi-person-plus-fill me-2"></i> Register
                        </button>
                    </form>
                </div>
                <div class="card-footer text-center py-3">
                    <div class="small">
                        <a asp-page="./Login" asp-route-returnUrl="@Model.ReturnUrl" class="text-primary font-weight-bold">Already have an account? Log In!</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />

    <script>
        document.addEventListener('DOMContentLoaded', function () {
            var roleSelect = document.getElementById('roleSelect');
            var farmerFields = document.getElementById('farmerFields');
            var employeeFields = document.getElementById('employeeFields');

            function toggleFields() {
                if (roleSelect.value === 'Farmer') {
                    farmerFields.style.display = 'block';
                    employeeFields.style.display = 'none';
                } else if (roleSelect.value === 'Employee') {
                    farmerFields.style.display = 'none';
                    employeeFields.style.display = 'block';
                } else {
                    farmerFields.style.display = 'none';
                    employeeFields.style.display = 'none';
                }
            }

            
            toggleFields();

            
            roleSelect.addEventListener('change', toggleFields);
        });
    </script>
}